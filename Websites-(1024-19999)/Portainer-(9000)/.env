# ============================================
# CONFIGURACIÓN CLOUDFLARE TUNNEL
# Copiar a .env y editar valores
# ============================================

# ID del túnel (obtener de: cloudflared tunnel list)
TUNNEL_ID="8da4eb9b-9406-4756-bfa9-8efd11d09ef9"
TUNNEL_NAME="a8-server"

# Dominio base (usar .cfargotunnel.com o tu dominio)
DOMAIN="a8-server.cfargotunnel.com"

# Rutas
CREDENTIALS_PATH="/etc/cloudflared/creds.json"

# Configuración WordPress
WP_DB_USER="admin"
WP_DB_PASS="admin1234"
WP_DB_NAME="wordpress"
DB_ROOT_PASS="root1234"

# Tiempo
TIMEZONE="America/Mexico_City"

# Network
DOCKER_NETWORK="internal_net"
