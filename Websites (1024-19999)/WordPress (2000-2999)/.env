# ============================================================================
# WORDPRESS DOCKER STACK - Environment Variables
# ============================================================================
# Copy this file to .env and edit with your values
# NEVER commit .env to version control!
# ============================================================================

# === SITE CONFIGURATION ===
PORT=2000
SITE_NAME=my-wordpress-site
DOMAIN=example.com
SITE_URL=http://example.com:2000

# === DATABASE CONFIGURATION ===
DB_NAME=wordpress_db
DB_USER=wp_user
DB_PASSWORD=REPLACE_WITH_STRONG_PASSWORD
DB_ROOT_PASSWORD=REPLACE_WITH_STRONG_ROOT_PASSWORD

# === WORDPRESS CONFIGURATION ===
TABLE_PREFIX=wp_
WP_DEBUG=0
WP_DEBUG_LOG=0
FORCE_SSL=false
DISABLE_UPDATES=false

# === PERFORMANCE SETTINGS ===
WP_MEMORY=256M
WP_MAX_MEMORY=512M
POST_REVISIONS=10
AUTOSAVE_INTERVAL=300
TRASH_DAYS=30

# === MYSQL OPTIMIZATION ===
INNODB_BUFFER=256M
MAX_CONNECTIONS=150

# === REDIS CACHE ===
REDIS_MAXMEMORY=256mb

# === IMAGE TAGS (Optional) ===
WORDPRESS_TAG=6.5-php8.2-apache
MYSQL_TAG=8.0
REDIS_TAG=7-alpine
PHPMYADMIN_TAG=latest
NGINX_TAG=alpine
PHP_CLI_VERSION=php8.2
WORDPRESS_VERSION=6.5
PORTAINER_TAG=latest

# === OPTIONAL SERVICES PORTS ===
HTTPS_PORT=20000
PMA_PORT=2001
NGINX_HTTP_PORT=2080
NGINX_HTTPS_PORT=2443
PORTAINER_PORT=29000
PORTAINER_SSL_PORT=29443
